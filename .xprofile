#!/usr/bin/env sh

setbg &		# Set the background
sxhkd &	# Bind keys

unclutter &		# Remove mouse when idle
xcompmgr &		# xcompmgr for transparency
dunst &			# dunst for notifications
nm-applet &		# network sys-tray

# start automatic screen locking after 5 minutes,
# displaying a notification 15 secs before locking the session
xautolock \
    -time 10 \
    -locker lock-screen \
    -detectsleep \
    -notify 30 \
    -notifier "notify-send -t 15000 \"xautolock\" \"Locking in 30 Seconds\"" &

# mpdupdate &

# Trackpad
# synclient TapButton1=1 # enable tap to click
synclient PalmDetect=1 # enable palm detection

# setup xkb and other keybaord related configs:
source $HOME/.local/bin/setup_keyboard.sh

# load theme
xrdb -merge $HOME/themes/normalize.xresource
# xrdb -merge $HOME/themes/Wombat.xresource
xrdb -merge $HOME/themes/Argonout.xresource
