#!/bin/sh

# Use neovim for vim if present.
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	yt="youtube-dl --add-metadata -i" \
	yta="yt -x -f bestaudio/best" \
	ffmpeg="ffmpeg -hide_banner"

# Colorize commands when possible.
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi"

# These common commands are just too long! Abbreviate them.
alias \
	ka="killall" \
	g="git" \
	trem="transmission-remote" \
	YT="youtube-viewer" \
	sdn="sudo shutdown -h now" \
	f="$FILE" \
	e="$EDITOR" \
	v="$EDITOR" \
	p="sudo pacman" \
	xi="sudo xbps-install" \
	xr="sudo xbps-remove -R" \
	xq="xbps-query" \
	z="zathura" \
	open="xdg-open"

# GIT related shortcuts
alias \
    gp="git push" \
    gc="git commit"

# other tools
alias \
	ref="shortcuts >/dev/null; source ${XDG_CONFIG_HOME:-$HOME/.config}/shortcutrc ; source ${XDG_CONFIG_HOME:-$HOME/.config}/zshnameddirrc" \
	weath="less -S ${XDG_DATA_HOME:-$HOME/.local/share}/weatherreport" \
	tmux="tmux -f ${XDG_CONFIG_HOME:-$HOME/.config}/tmux/tmux.conf" \
	SS="sudo systemctl" \
	ec="emacsclient -c" \
	note="TERM=screen-256color emacsclient -t -e \(spacemacs/new-empty-buffer\)" \
	wiki="et $HOME/wiki/" \
	sysrice="sudo yadm -Y /etc/sysrice" \
	la="exa --long --all --header" \
	trello="with-secret-env trello" \
	personal="with-secret-env personal" \
	editmr="with-secret-env forge edit-mr -o" \
	openmr="with-secret-env forge open-mr" \
	createissue="with-secret-env forge create-issue -o" \
  copy="xclip -selection c" \
  paste="xclip -selection c -o" \
  ssh="TERM=xterm-color ssh" \
  kitty="kitty --single-instance" \
  theme="kitty-theme --config ~/.config/kittythemechanger.py" \
  toggle-theme="theme -t && theme -L" \
  dark="change-theme dark" \
  light="change-theme light"

